<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TabHost
        android:id="@+id/tbhconversores"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#95EB00" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/universal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#418DFF  "
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="240dp"
                        android:ems="10"
                        android:hint="Valor"
                        android:inputType="text" />

                    <EditText
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="150dp"
                        android:ems="10"
                        android:hint="Unidades"
                        android:inputType="numberDecimal" />

                    <EditText
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="50dp"
                        android:ems="10"
                        android:hint="Cantidad"
                        android:inputType="numberDecimal" />

                    <Button
                        android:id="@+id/btnConvertir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="364dp"
                        android:background="#65A478"
                        android:onClick="Convertir"
                        android:text="Convertir"
                        tools:ignore="OnClick" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/optoperaciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="250dp"
                        android:entries="@array/operaciones"/>
                    <Spinner
                        android:id="@+id/optoperaciones1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="50dp"
                        android:entries="@array/operaciones"/>
                    <EditText
                        android:id="@+id/txtnum2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="240dp"
                        android:ems="10"
                        android:hint="Numero"
                        android:inputType="numberDecimal" />
                    <Button
                        android:id="@+id/btnConvertir1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="364dp"
                        android:onClick="Calcular1"
                        android:text="Calcular "
                        tools:ignore="OnClick" />
                    <TextView
                        android:id="@+id/lblRespuesta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Respuesta: "
                        android:layout_marginTop="450dp"
                        android:layout_marginLeft="156dp"
                        />


                </RelativeLayout>


            </FrameLayout>

        </LinearLayout>

    </TabHost>

</RelativeLayout>